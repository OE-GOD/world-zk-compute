# World ZK Compute Prover - Environment Variables
#
# Copy this file to .env and fill in your values.
# These values override any settings in prover.toml

# =============================================================================
# REQUIRED
# =============================================================================

# Your prover wallet private key (with 0x prefix)
# This wallet will sign transactions and receive rewards
PRIVATE_KEY=0x...

# RPC URL for World Chain
# Get one from Alchemy, Infura, or run your own node
RPC_URL=https://worldchain-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ExecutionEngine contract address on World Chain
ENGINE_ADDRESS=0x...

# =============================================================================
# OPTIONAL - Proving
# =============================================================================

# WebSocket URL for event subscription (for instant job detection)
# Set to "none" to disable and use polling only
# WS_URL=wss://worldchain-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ProgramRegistry contract address (for on-chain program lookup)
# REGISTRY_ADDRESS=0x...

# Bonsai cloud proving API key (for faster proofs)
# Get one from: https://bonsai.risc0.com
# BONSAI_API_KEY=...

# Proving mode: local, gpu, gpu-fallback, bonsai, bonsai-fallback, bonsai-gpu
PROVING_MODE=gpu-fallback

# Maximum concurrent proofs
MAX_CONCURRENT=4

# =============================================================================
# OPTIONAL - Network
# =============================================================================

# Minimum tip to accept (in ETH)
# MIN_TIP=0.0001

# Minimum profit margin (0.0 - 1.0)
# MIN_PROFIT_MARGIN=0.2

# Skip profitability check (accept all jobs)
# SKIP_PROFITABILITY_CHECK=false

# =============================================================================
# OPTIONAL - Monitoring
# =============================================================================

# Health check server port (0 to disable)
HEALTH_PORT=8081

# API server port
API_PORT=9090

# Log level: trace, debug, info, warn, error
RUST_LOG=info

# =============================================================================
# OPTIONAL - Performance
# =============================================================================

# Memory cache size in MB
CACHE_SIZE_MB=256

# Job queue size
QUEUE_SIZE=1000

# =============================================================================
# OPTIONAL - Cluster Mode
# =============================================================================

# Enable cluster mode for multi-prover coordination
# CLUSTER_ENABLED=false

# Cluster listen address
# CLUSTER_LISTEN=0.0.0.0:9091

# Seed peers (comma-separated)
# CLUSTER_PEERS=192.168.1.10:9091,192.168.1.11:9091
